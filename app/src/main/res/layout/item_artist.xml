<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:padding="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bg_item_music"
            android:id="@+id/ll_item"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/iv_img_artist"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:src="@drawable/img"
                android:layout_height="60dp" />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="6dp"
                    android:id="@+id/tv_name_artist"
                    android:text="Stay with me"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/grey_50"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_number_song_artist"
                    android:layout_below="@+id/tv_name_artist"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="8dp"
                    android:text="text"
                    android:textSize="10dp"
                    android:textColor="@color/grey_50"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_number_song"
                    android:layout_below="@id/tv_name_artist"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_toRightOf="@id/tv_number_song_artist"
                    android:layout_marginLeft="8dp"
                    android:text="songs"
                    android:textSize="10dp"
                    android:textColor="@color/grey_50"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/ib_more"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
