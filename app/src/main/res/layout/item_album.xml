<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/bg_item_music"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_album"
                android:src="@drawable/img"
                android:layout_width="170dp"
                android:layout_height="170dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_album"
                    android:text="text"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/grey_50"
                    android:singleLine="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_number_song_album"
                    android:layout_below="@+id/tv_name_album"
                    android:layout_marginLeft="8dp"
                    android:text="text"
                    android:textSize="10dp"
                    android:textColor="@color/grey_50"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_number_song"
                    android:layout_below="@id/tv_name_album"
                    android:layout_toRightOf="@id/tv_number_song_album"
                    android:layout_marginLeft="8dp"
                    android:text="songs"
                    android:textSize="10dp"
                    android:textColor="@color/grey_50"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/ib_more_album"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-8dp"
                    android:layout_toRightOf="@+id/tv_name_album"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>