<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_img_notify"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:src="@drawable/img"
            android:layout_height="60dp" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="156dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_name_notify"
                android:text="Stay with me"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="@color/grey_50"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_singer_notify"
                android:layout_below="@+id/tv_name_notify"
                android:text="Rochus"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_back_notify"
            android:background="@drawable/apollo_holo_dark_prev"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <ImageButton
            android:id="@+id/btn_play_notify"
            android:layout_marginLeft="20dp"
            android:background="@drawable/apollo_holo_dark_play"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <ImageButton
            android:id="@+id/btn_next_notify"
            android:layout_marginLeft="20dp"
            android:background="@drawable/apollo_holo_dark_next"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <ImageButton
            android:id="@+id/btn_close_notify"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
